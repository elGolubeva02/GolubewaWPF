<Page x:Class="GolubewaWPF.Dll"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GolubewaWPF"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="800"
      Title="Dll">

    <Grid Height="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="400*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column ="0">
                <GroupBox Header="Средний возраст клиентов">
                    <Button x:Name ="ага" Content="Узнать" Click ="ага_Click" />
                </GroupBox>
            </StackPanel>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Column ="1">
                <GroupBox Header="Фильтр клиентов">
                    <StackPanel>
                        <TextBox x:Name="txtName" />
                        <Button x:Name ="угу" Content="Применить" Click ="угу_Click"/>
                        <TextBlock x:Name="Names" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
